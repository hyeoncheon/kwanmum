<p id="notice"><%= notice %></p>

<h1>Listing Logs</h1>

<table>
  <thead>
    <tr>
      <th>Cat</th>
      <th>Lev</th>
      <th>Time</th>
      <th>Host(Svc)</th>
      <th>Process</th>
      <th>Message</th>
      <th>Actor</th>
      <th>Action(Reason)</th>
      <th>Target</th>
      <th>Tag</th>
      <th>Client</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td class="tar"><%= log.category %></td>
        <td><%= log.level %></td>
        <td><%= log.time.localtime.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td title="<%= log.service %>"><%= log.hostname %></td>
        <td title="<%= log.process %>"><%= log.process.truncate(10) %></td>
        <td><%= link_to log.message, log %></td>
        <td><%= log.actor %></td>
        <td title="<%= log.reason %>"><%= log.action %></td>
        <td><%= log.target %></td>
        <td><%= log.tag %></td>
        <td><%= link_to log.client.name, log.client if log.client %></td>
        <td><%= link_to log, method: :put,
          data: { confirm: 'Are you sure?' } do %><span
              class="icn-check"></span><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
