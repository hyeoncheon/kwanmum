<p id="notice"><%= notice %></p>

<h1>Listing Logs</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Level</th>
      <th>Time</th>
      <th>Service</th>
      <th>Hostname</th>
      <th>Process</th>
      <th>Message</th>
      <th>Actor</th>
      <th>Action</th>
      <th>Target</th>
      <th>Reason</th>
      <th>Tag</th>
      <th>Client</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td><%= log.category %></td>
        <td><%= log.level %></td>
        <td><%= log.time %></td>
        <td><%= log.service %></td>
        <td><%= log.hostname %></td>
        <td><%= log.process %></td>
        <td><%= log.message %></td>
        <td><%= log.actor %></td>
        <td><%= log.action %></td>
        <td><%= log.target %></td>
        <td><%= log.reason %></td>
        <td><%= log.tag %></td>
        <td><%= log.client %></td>
        <td><%= link_to 'Show', log %></td>
        <td><%= link_to 'Edit', edit_log_path(log) %></td>
        <td><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

