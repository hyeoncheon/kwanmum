<p id="notice"><%= notice %></p>

<h1>Listing Accesses</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Client</th>
      <th>Service</th>
      <th>Permissions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accesses.each do |access| %>
      <tr>
        <td><%= access.description %></td>
        <td><%= access.client.name %></td>
        <td><%= access.service.name %></td>
        <td><%= access.permissions %></td>
        <td><%= link_to 'Show', access %></td>
        <td><%= link_to 'Edit', edit_access_path(access) %></td>
        <td><%= link_to 'Destroy', access, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

